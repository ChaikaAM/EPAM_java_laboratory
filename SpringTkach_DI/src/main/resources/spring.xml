<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="myapp" class="App">
        <property name="client">
            <bean class="Client">
                <constructor-arg value="1"/>
                <constructor-arg value="John Smith"/>
            </bean>
        </property>
        <property name="eventLogger">
            <bean class="CacheFileEventLogger" init-method="init" destroy-method="destory">
                <constructor-arg value="c:/java/fileeventlogger.txt"/>
                <property name="cacheSize" value="10"/>
            </bean>
        </property>
    </bean>

    <bean id="simpleevent" name="anotherevent" class="Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg>
            <bean class="java.text.DateFormat"
                  factory-method="getDateTimeInstance">
                <constructor-arg value="0" type="int"/>
                <constructor-arg value="2" type="int"/>
            </bean>
        </constructor-arg>
    </bean>
</beans>